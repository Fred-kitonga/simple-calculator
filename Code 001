#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double num1, num2, result;
    char op;
    
    cout << "Enter the first number: ";
    cin >> num1;
    cout << "Enter the second number: ";
    cin >> num2;
    cout << "Enter the operator (+, -): ";
    cin >> op;
    
    switch (op)
    {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        default:
            cout << "Invalid operator!\n";
            return 0;
    }
    
    cout << "Result: " << result << endl;
    
    return 0;
}
